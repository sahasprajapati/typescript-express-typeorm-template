{
  "compilerOptions": {
    "target": "es2016",

    "module": "commonjs",

    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@config/*": ["src/config/*"],
      "@utils/*": ["src/utils/*"],
      "@infrastructure/*": ["src/infrastructure/*"],
      "@types/*": ["src/@types/*"],
      "@api/*": ["src/api/*"],
      "@base/*": ["src/*"],
      "*": ["node_modules/*"]
    },

    "sourceMap": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "strict": true,
    "noImplicitAny": true,
    "pretty": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "ts-node": {
    "transpileOnly": true
  }
}
